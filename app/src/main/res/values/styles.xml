<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textColorPrimaryInverse">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>
        <item name="extendedFloatingActionButtonStyle">@style/AppTheme.ExtendedFab</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="AppTheme.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="AppTheme.RoundedCard" parent="AppTheme.Card">
        <item name="cardCornerRadius">@dimen/default_margin_size</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.RoundButton.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.RoundButton" parent="AppTheme.Button">
        <item name="shapeAppearanceOverlay">@style/AppTheme.RoundButton.Shape</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppTheme.ActionButton" parent="AppTheme.RoundButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.Fab" parent="Base.Widget.Material3.FloatingActionButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/colorOnFab</item>
        <item name="backgroundTint">@color/colorFab</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fabCustomSize">@dimen/form_button_size</item>
        <item name="maxImageSize">@dimen/fab_icon_size</item>
    </style>

    <style name="AppTheme.ExtendedFab" parent="Base.Widget.Material3.ExtendedFloatingActionButton.Icon">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnFab</item>
        <item name="iconTint">@color/colorOnFab</item>
        <item name="backgroundTint">@color/colorFab</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="maxImageSize">@dimen/fab_icon_size</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="colorControlHighlight">@color/colorPrimaryContainer</item>
    </style>

    <style name="AppTheme.ToolbarText" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="AppTheme.Preferences" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/dialog_round_background</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_round_background</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayoutAutoComplete" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DynamicTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.IconChip">
        <item name="android:layout_width">@dimen/chip_width</item>
        <item name="android:layout_height">@dimen/chip_height</item>
        <item name="android:background">@drawable/chip_icon_background</item>
        <item name="android:elevation">@dimen/number_text_elevation</item>
        <item name="android:paddingStart">@dimen/default_margin_size</item>
        <item name="android:paddingEnd">@dimen/default_margin_size</item>
        <item name="android:paddingTop">@dimen/small_margin_size</item>
        <item name="android:paddingBottom">@dimen/small_margin_size</item>
    </style>

</resources>

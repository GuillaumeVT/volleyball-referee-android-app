        android:layout_marginBottom="@dimen/big_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:text="@string/rules_court_switches"
        android:textAllCaps="true"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/rules_court_switches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_margin_size"
        android:clickable="false"
        android:text="@string/rules_court_switches"
        android:textColor="@color/colorOnSurface"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:text="@string/rules_court_switch_frequency"
        android:textAppearance="@style/AppTheme.TextView"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rules_court_switch_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:text="@string/rules_court_switch_frequency_tie_break"
        android:textAppearance="@style/AppTheme.TextView"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rules_court_switch_frequency_tie_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:text="@string/substitutions_tab"
        android:textAllCaps="true"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:text="@string/rules_substitutions_limitation"
        android:textAppearance="@style/AppTheme.TextView"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rules_substitutions_limitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rules_substitutions_limitation_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginTop="@dimen/small_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:drawablePadding="@dimen/default_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textSize="@dimen/small_text_size"
        app:drawableStartCompat="@drawable/ic_info" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginTop="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:text="@string/rules_team_substitutions_per_set"
        android:textAppearance="@style/AppTheme.TextView"
        android:textSize="@dimen/default_text_size" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rules_team_substitutions_per_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin_size"
        android:layout_marginEnd="@dimen/big_margin_size"
        android:layout_marginBottom="@dimen/big_margin_size"
        android:textAppearance="@style/AppTheme.TextView"
        android:textColor="@color/colorDisabledText"
        android:textSize="@dimen/default_text_size" />

